{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PX_V1_3 Resources Catalog V1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "resources"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "maxLength": 16
    },
    "resources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "slug",
          "title",
          "summary",
          "tags",
          "category",
          "level",
          "journey",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^res-\\d{3}$",
            "maxLength": 32
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            "maxLength": 64
          },
          "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 80
          },
          "summary": {
            "type": "string",
            "minLength": 10,
            "maxLength": 160
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "maxItems": 8,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
              "maxLength": 24
            }
          },
          "category": {
            "type": "string",
            "enum": ["tool", "guide", "checklist"]
          },
          "level": {
            "type": "string",
            "enum": ["intro", "intermediate"]
          },
          "journey": {
            "type": "string",
            "enum": ["p1"]
          },
          "type": {
            "type": "string",
            "enum": ["tool", "read", "checklist"]
          }
        }
      }
    }
  }
}
